{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "synthetic_data_generator.app_fastapi:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            "name": "Generate Synthetic Data",
            "type": "debugpy",
            "request": "launch",
            "program": "synthetic_data_generator/data_generator.py",
            "console": "integratedTerminal",
            "args": [
                "--topics_file",
                "synthetic_data_generator/config/topics.json",
                "--tones_file",
                "synthetic_data_generator/config/tones.json",
                "--instructions_file",
                "synthetic_data_generator/config/additional_instructions.json",
                "--languages_file",
                "synthetic_data_generator/config/languages.json",
                "--context_file",
                "synthetic_data_generator/config/context.txt",
                "--number_of_generated_rows",
                "5",
                "--output_file",
                "synthetic_data_generator/output/synthetic_data.json"
            ]
        },
        {
            "name": "Generate Synthetic Agent Data",
            "type": "debugpy",
            "request": "launch",
            "program": "synthetic_data_generator/data_generator.py",
            "console": "integratedTerminal",
            "args": [
                "--topics_file", "synthetic_data_generator/config/agent_eval_example/topics.json",
                "--tones_file", "synthetic_data_generator/config/agent_eval_example/tones.json",
                "--instructions_file", "synthetic_data_generator/config/agent_eval_example/additional_instructions.json",
                "--languages_file", "synthetic_data_generator/config/agent_eval_example/languages.json",
                "--agent_config_file", "synthetic_data_generator/config/agent_eval_example/agent_definitions.json",
                "--context_file", "synthetic_data_generator/config/agent_eval_example/context.txt",
                "--number_of_generated_rows", "5",
                "--output_file", "synthetic_data_generator/output/synthetic_agent_data.jsonl"
            ]
        },
        {
            "name": "Run Evaluator Alignment",
            "type": "debugpy",
            "request": "launch",
            "program": "custom_evals/evaluator_alignment.py",
            "console": "integratedTerminal",
            "args": [
                "--input_path", "custom_evals/data/input_data/eval_data_processed_with_human_labels.jsonl",
            ]
        },
        {
            "name": "Run eval",
            "type": "debugpy",
            "request": "launch",
            "program": "run_evals/evaluate.py",
            "console": "integratedTerminal",
            "args": [
                "--evaluator",
                "custom_eval",
                "--output_path",
                "run_evals/data/output/eval_result.csv",
                "--input_path",
                "run_evals/data/input/synthetic_eval_data_processed.jsonl",
            ]
        }
    ]
}